<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.hello" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Biller</name>
    <description>
        Very easy user interface to generate your bill and download PDF.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        THEUPTREE
    </author>
    <content src="index.html" />
      <feature name="http://api.phonegap.com/1.0/device" />
    <feature name="debug-server" required="true">
       <param name="domain" value="http://debug.phonegap.com"/>
       <param name="key" value="willoughby"/>
    </feature>

   <preference name="phonegap-version" value="cli-6.4.0" />

    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
    <preference name="webviewbounce"    value="false" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="assets/images/mdpi.png" density="mdpi" />
        <icon src="assets/images/hdpi.png" density="hdpi" />
        <icon src="assets/images/xhdpi.png" density="xhdpi" />
        <icon src="assets/images/xxhdpi.png" density="xxhdpi" />
        <icon src="assets/images/xxxhdpi.png" density="xxxhdpi" />

</platform>
       <splash src="splash.png"/>

       <preference name="SplashScreenDelay" value="3000" />


    <plugin name="cordova-pdf-generator" spec="^2.0.1" />
    <engine name="android" spec="^7.0.0" />
    <engine name="browser" spec="^5.0.3" />
</widget>
